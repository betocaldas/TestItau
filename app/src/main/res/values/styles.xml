<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/DefaulAppearance</item>
    </style>

    <style name="DefaulAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DefaulAppearance.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MoneyAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/money_label</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="DefaultRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/DefaulAppearance</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
        <item name="android:paddingBottom">@dimen/default_margin</item>
    </style>

    <style name="DefaultCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
